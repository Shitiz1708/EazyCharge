    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/codebold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="Update Prices" />


<LinearLayout
    android:id="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/margin"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="112dp"
    >

    <TextView
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#94F50F"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/codebold"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:text="Level 3" />

    <TextView
        android:id="@+id/fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#94F50F"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/codebold"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:text="50" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="112dp"
        >

        <TextView
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFC107"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/codebold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:text="Level 2" />
    <TextView
        android:id="@+id/med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFC107"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/codebold"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:text="30" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="112dp"
        >

        <TextView
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF2434"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/codebold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:text="Level 1" />

    <TextView
        android:id="@+id/slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FF2434"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/codebold"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:text="15" />
</LinearLayout>


    <com.gc.materialdesign.views.Slider
        android:id="@+id/slider2"
        materialdesign:max="2000"
        materialdesign:min="-2000"
        android:layout_width="300dp"
        android:layout_below="@+id/lin3"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_light"></com.gc.materialdesign.views.Slider>
    <TextView
        android:id="@+id/num_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/heading"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@android:color/white"

        android:textSize="80sp"
        app:fontFamily="@font/codebold" />
    <TextView
        android:id="@+id/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/num_med"
        android:layout_centerHorizontal="true"
        android:text="Margin"
        android:textColor="@android:color/white"

        android:textSize="20sp"
        app:fontFamily="@font/codebold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_below="@id/slider2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_round2"
        android:layout_height="wrap_content"
        android:text="Update Price" />

</RelativeLayout>