<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25262d"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Your preferred mode of charging"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="-5dp"
        android:textSize="18sp"
        app:fontFamily="@font/codebold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="187dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fitsSystemWindows="true"
        app:srcCompat="@drawable/loc" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="306dp"
        android:layout_height="286dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-40dp"
        android:fitsSystemWindows="true"
        app:srcCompat="@drawable/backso" />

    <Button
        android:id="@+id/button"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/edit_round2"
        android:fontFamily="@font/codebold"
        android:text="Plug-in Charger"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerInParent="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/edit_round2"
        android:fontFamily="@font/codebold"
        android:text="Battery Swap"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</RelativeLayout>