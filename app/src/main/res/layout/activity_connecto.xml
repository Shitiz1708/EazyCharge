<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"

    android:background="#25262d"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/nema"
            android:layout_width="120dp"
            android:layout_height="120dp"
            materialdesign:srcCompat="@drawable/nema" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:fontFamily="@font/codebold"
            android:text="Nema 515 \n Level 1"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/nema1450"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            materialdesign:srcCompat="@drawable/nema_1450" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"

            android:layout_marginTop="10dp"
            android:fontFamily="@font/codebold"
            android:text="Nema 515 \n Level 1"
            android:textColor="#ffff"
            android:textSize="18dp" />

        <ImageView

            android:id="@+id/j1772"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            materialdesign:srcCompat="@drawable/j1772" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/codebold"
            android:text="J1772 \n Level 2"
            android:textColor="#ffff"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>